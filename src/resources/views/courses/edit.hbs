<div class="mt-4">
    <h1>EDIT COURSE</h1>
    <form method="post" action="/courses/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Name Course</label>
            <input name="name" type="text" class="form-control" value="{{course.name}}" id="name">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" class="form-control" value="" id="description">{{course.description}}</textarea>
        </div>

        <div class="mb-3">
            <label for="videoId" class="form-label">Video ID</label>
            <input name="videoId" type="text" class="form-control" value="{{course.videoId}}" id="videoId">
        </div>

        <div class="mb-3">
            <label for="level" class="form-label">Level Course</label>
            <input name="level" type="text" class="form-control" value="{{course.level}}" id="level">
        </div>

        <button type="submit" class="btn btn-primary">UPDATE</button>
    </form>
</div>